<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.juggle.chat.component.HeadComponent
        android:id="@+id/head_component"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:head_title_text="@string/text_group_announcement"
        app:head_right_text="@string/sb_text_channel_anchor_save"/>

    <TextView
        style="@style/TextStyle.Alignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="27dp"
        android:text="@string/text_group_announcement_tips"
        android:textSize="13sp"
        android:textColor="#A0A5AB" />

    <TextView
        android:id="@+id/profile_tv_update_group_notice_time"
        style="@style/TextStyle.Alignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="13sp"
        android:textColor="#A0A5AB"
        tools:text="发布时间：2025-02-20 18:34:21" />

    <EditText
        android:id="@+id/profile_et_group_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
        android:paddingEnd="27dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:cursorVisible="true"
        android:gravity="top"
        android:hint="@string/text_edit_group_announcement"
        android:inputType="text|textMultiLine"
        android:minLines="8"
        android:scrollbars="vertical"
        android:textColor="#111F2C"
        android:textColorHint="#BDBDBD"
        android:textSize="16sp" />

</LinearLayout>