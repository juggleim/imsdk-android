<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="280dp"
    android:layout_height="148dp"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/common_tv_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:textSize="17dp"
        tools:text="加为好友"
        android:gravity="center"
        android:textColor="#111F2C"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/common_et_dialog_input"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="@dimen/sb_size_44"
        android:textSize="12dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/common_edit_bg"
        android:maxLength="64" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_tv_dialog_cancel"
            style="@style/TextStyle.Alignment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/j_cancel"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E5E5E5" />

        <TextView
            android:id="@+id/common_tv_dialog_confirm"
            style="@style/TextStyle.Alignment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/j_confirm"
            android:textColor="#0099ff" />
    </LinearLayout>
</LinearLayout>
</FrameLayout>